        <Button x:Name="btnPlus" Content="+" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="356,390,0,0" Width="29" Click="btnPlus_Click"/>
        <Button x:Name="btnMinus" Content="-" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="356,462,0,0" Width="29" Click="btnMinus_Click"/>
        <Button x:Name="btnInterest" Content="InterestPage" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="445,294,0,0" Click="btnInterest_Click" Width="139"/>
        <Button x:Name="btnArray20" Content="BubbleSort" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="445,331,0,0" Width="139" Click="btnArray20_Click"/>
        <Button x:Name="btnMassPage" Content="MassPage" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="445,368,0,0" Width="139" Click="btnMassPage_Click"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Other pages:" VerticalAlignment="Top" Margin="478,252,0,0" Width="106"/>
        <Button x:Name="btnExchangePage" Content="ExchangePage" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="445,405,0,0" Width="139" Click="btnExchangePage_Click"/>
        <Button x:Name="btnQuicksort" Content="QuicksortPage" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="445,440,0,0" Width="139" Click="btnQuicksort_Click"/>
        <TextBlock x:Name="redError" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="123,167,0,0" Height="32" Width="461" Foreground="Red"/>

